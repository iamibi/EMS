	<system.web>
		<authentication mode="Forms">
			<forms loginUrl="~/EMS/Login" timeout="2880" />
		</authentication>

		<customErrors mode="RemoteOnly"  defaultRedirect="~/error">
			<error statusCode="404" redirect="~/Views/Error/PageNotFound" />
			<error statusCode="500" redirect="~/Views/Error/Failure" />
		</customErrors>
	</system.web>
	<system.webServer>
		<httpErrors errorMode="Detailed" />
	</system.webServer>
</configuration>