<body>
    <h4>List of Employees available</h4>
    @foreach (var user in ViewBag.usersList)
    {
        <div class="row">
            <div class="col-lg-12">@user.EmailId</div>
            <div class="col-lg-12">
                @using (Html.BeginForm("AddUserToManager", "EMS", new { emailId = user.EmailId }, FormMethod.Post))
                {
                    <input type="submit" class="btn btn-primary" value="Add" />
                }
            </div>
        </div><br />
    }
    <br />
    @Html.ActionLink("Log out", "Logout", "EMS")
</body>