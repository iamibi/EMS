@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div>
    @using (Html.BeginForm("Login", "EMS"))
    {
        @Html.AntiForgeryToken()
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />

        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Email)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Email, new { @class = "form-control", autocomplete = "off" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Password)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password", autocomplete = "off" })</div>
        </div><br />
        <input type="submit" value="Login" class="btn btn-primary" />
        <br />
        <br />

        @if (ViewBag.ErrorMessage != string.Empty)
        {
            <div class="row">
                <label for="error_message">@ViewBag.ErrorMessage</label>
            </div>
        }
    }

</div>
